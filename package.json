{
  "name": "version-incrementor",
  "author": "Jacques-Philippe Amiot",
  "repository": {
    "type": "git",
    "url": "https://github.com/Jacques-Philippe/vInc"
  },
  "description": "A package to manage incrementing of a version file",
  "packageManager": "yarn@3.1.1",
  "dependencies": {
    "fast-xml-parser": "^4.0.0-beta.8",
    "lodash": "^4.17.21",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4",
    "@types/node": "^17.0.5",
    "@types/prettier": "^2",
    "@types/prompts": "^2",
    "@vercel/ncc": "^0.33.1",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "lint-staged": "^12.1.5",
    "nexe": "^4.0.0-beta.19",
    "prettier": "2.5.1",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  },
  "scripts": {
    "build": "yarn tsc",
    "dev": "yarn build && yarn node dist/index.js",
    "test": "yarn jest --verbose ./src",
    "prepare": "husky install",
    "compile": "yarn ncc build dist/index.js -o out",
    "build-exe": "yarn nexe out/index.js -o vInc -t mac-x64 --build && yarn nexe out/index.js -o vInc -t windows-x64 --build && yarn nexe out/index.js -o vInc -t linux-x64 --build"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.ts": "prettier --write --ignore-unknown"
  },
  "files": [
    "dist/**/*.js"
  ],
  "types": "dist/**/*.d.ts",
  "bin": "dist/index.js"
}
